{
   "name": "ventoli-api",
   "version": "0.1.0",
   "author": "Coli",
   "private": true,
   "description": "Awesome project developed with TypeORM.",
   "scripts": {
		 	"dev": "yarn run start",
      "start": "ts-node -r dotenv/config src/index.ts --files",
      "typeorm": "ts-node -r dotenv/config ./node_modules/typeorm/cli.js",
      "migration:generate": "yarn run typeorm -- migration:generate -n",
      "migration:run": "yarn run typeorm -- migration:run",
      "migration:revert": "npm run typeorm -- migration:revert",
      "test": "mocha -r dotenv/config -r ts-node/register ./src/**/*.test.ts",
      "test:watch": "yarn run test -- --watch-extensions ts --watch",
      "test:coverage": "nyc yarn run test"
   },
   "dependencies": {
      "@ventoli/ventoli-model": "0.1.0",
      "body-parser": "^1.19.0",
      "class-validator": "^0.12.2",
      "cors": "^2.8.5",
      "dotenv": "^8.2.0",
      "express": "^4.17.1",
      "helmet": "^4.1.0",
      "jsonwebtoken": "^8.5.1",
      "mysql": "^2.18.1",
      "reflect-metadata": "^0.1.10",
      "swagger-jsdoc": "^4.0.0",
      "swagger-ui-express": "^4.1.4",
      "typeorm": "^0.2.25"
   },
   "devDependencies": {
      "@types/bcryptjs": "^2.4.2",
      "@types/chai": "^4.2.12",
      "@types/cors": "^2.8.7",
      "@types/express": "^4.17.7",
      "@types/helmet": "^0.0.47",
      "@types/jsonwebtoken": "^8.5.0",
      "@types/mocha": "^8.0.3",
      "@types/sinon": "^9.0.4",
      "@types/sinon-chai": "^3.2.4",
      "@types/sinon-express-mock": "^1.3.8",
      "@types/swagger-jsdoc": "^3.0.2",
      "@types/swagger-ui-express": "^4.1.2",
      "chai": "^4.2.0",
      "mocha": "^8.1.1",
      "nyc": "^15.1.0",
      "sinon": "^9.0.3",
      "sinon-chai": "^3.5.0",
      "sinon-express-mock": "^2.2.1",
      "ts-mocha": "^7.0.0",
      "ts-node": "^8.10.2",
      "typescript": "^3.7.2"
   }
}
